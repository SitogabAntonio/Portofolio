{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": { "phpVersion": "8.2" }
    },
    {
      "src": "public/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/public/index.php" }
  ],
  "functions": {
    "public/index.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "build": {
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false"
    }
  }
}