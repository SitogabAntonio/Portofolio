{
  "version": 2,
  "buildCommand": "composer install --no-dev --optimize-autoloader && npm ci && npm run build",
  "outputDirectory": "public",
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://portofolio-akud.vercel.app",
    "SESSION_DRIVER": "cookie",
    "CACHE_DRIVER": "array",
    "VIEW_COMPILED_PATH": "/tmp",
    "LOG_CHANNEL": "stderr"
  }
}